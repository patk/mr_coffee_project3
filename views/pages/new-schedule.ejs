<%- include('layout') -%>
<h2>Add new schedule:</h2>
<form id="schedule-form" action="/new" method="post">
  <!--TODO: try to display the full name of the user in a dropdown menu-->
  <!--<label for="user_id">User ID: </label>-->
  <!--<input type="number" id="user_id" name="user_id" required /> <br />-->
  <label for="username">Username: </label>
  <input type="text" id="username" name="username" required /> <br />

  <label for="day">Day: </label>
  <select name="day">
    <option value="1">Monday (1)</option>
    <option value="2">Tuesday (2)</option>
    <option value="3">Wednesday (3)</option>
    <option value="4">Thursday (4)</option>
    <option value="5">Friday (5)</option>
    <option value="6">Saturday (6)</option>
    <option value="7">Sunday (7)</option>
  </select>
  <br />

  <label for="start_time">Start time: </label>
  <input type="time" id="start_time" name="start_time" required /> <br />

  <label for="end_time">End time: </label>
  <input type="time" id="end_time" name="end_time" required /> <br />

  <button type="submit" form="schedule-form" value="Submit">Submit</button>
</form>
<br />
<a href="/">See all schedules</a>
